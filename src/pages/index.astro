---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const weapons = await getCollection("weapons");
---

<Layout>
  <h1>Weapons</h1>
  <ul>
    {
      weapons.map((weapon) => (
        <li>
          <a href={`weapons/${weapon.data.id}`}>{weapon.data.name}</a>
        </li>
      ))
    }
  </ul>
</Layout>
